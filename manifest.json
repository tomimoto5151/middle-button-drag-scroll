{
    "manifest_version": 3,
    "name": "Middle Button Drag Scroll",
    "version": "1.0",
    "description": "Adds middle-button drag scroll functionality to Chrome on Mac",
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "permissions": ["storage"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png",
      "default_title": "Middle Button Drag Scroll"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }